<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Resolute_App.MainPage"
             xmlns:local="clr-namespace:Resolute_App"
             BarBackgroundColor="Blue"
            SelectedTabColor="White"
            UnselectedTabColor="Aqua"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom">

    <local:ProfilePage Title="Profile" />

    <ContentPage Title="Home">
        <Label Text="Home Page" HorizontalOptions="CenterAndExpand"></Label>
        <?Button to preview the login page TEMPORARY?>
        <Button Text="Login Page"
                x:Name="LoginPage"
                BackgroundColor="OrangeRed"
                Clicked="LoginPage_Clicked" />
    </ContentPage>

    <ContentPage Title="Settings">
        <Label Text="Settings Menu" HorizontalOptions="CenterAndExpand"></Label>
    </ContentPage>

</TabbedPage>
