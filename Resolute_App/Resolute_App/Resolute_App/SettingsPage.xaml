<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Resolute_App.SettingsPage">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableSection Title="Settings">
                <SwitchCell Text="App setting 1"></SwitchCell>
                <SwitchCell Text="app setting 2"></SwitchCell>
                <SwitchCell Text="App setting 3"></SwitchCell>

                <ViewCell>
                    <ViewCell.View>
                        <StackLayout>
                            <Label Text="Setting 4" HorizontalOptions="CenterAndExpand"></Label>
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </TableSection>
        </TableView>
    </ContentPage.Content>
</ContentPage>