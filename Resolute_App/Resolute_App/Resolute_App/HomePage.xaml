<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" 
             Title="Home"
             x:Class="Resolute_App.HomePage"> <!-- This page uses Pancake Nuget Package for better rounded corners on items -->
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="30">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,0,0,20">
                    <yummy:PancakeView BackgroundColor="White" CornerRadius="0,0,8,8" Margin="0,0,30,0">
                        <StackLayout Orientation="Vertical">
                            <ImageButton Source="under_development_placeholder" WidthRequest="150" Padding="0" Margin="0"/>
                            <Label Text="Self-Development" Padding="10,5,0,35"/>
                        </StackLayout>
                    </yummy:PancakeView>

                    <yummy:PancakeView BackgroundColor="White" CornerRadius="0,0,8,8" Margin="0,0,30,0">
                        <StackLayout Orientation="Vertical">
                            <ImageButton Source="under_development_placeholder" WidthRequest="150" Padding="0" Margin="0"/>
                            <Label Text="Friends" Padding="10,5,0,35"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Friends_Tapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </yummy:PancakeView>
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,0,0,20">
                    <yummy:PancakeView BackgroundColor="White" CornerRadius="0,0,8,8" Margin="0,0,30,0">
                        <StackLayout Orientation="Vertical">
                            <ImageButton Source="under_development_placeholder" WidthRequest="150" Padding="0" Margin="0"/>
                            <Label Text="Social Profile" Padding="10,5,0,35"/>
                        </StackLayout>
                    </yummy:PancakeView>

                    <yummy:PancakeView BackgroundColor="White" CornerRadius="0,0,8,8" Margin="0,0,30,0">
                        <StackLayout Orientation="Vertical">
                            <ImageButton Source="under_development_placeholder" WidthRequest="150" Padding="0" Margin="0"/>
                            <Label Text="Daily Tasks" Padding="10,5,0,35"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Tasks_Tapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </yummy:PancakeView>
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,0,0,20">
                    <yummy:PancakeView BackgroundColor="White" CornerRadius="0,0,8,8" Margin="0,0,30,0">
                        <StackLayout Orientation="Vertical">
                            <ImageButton Source="under_development_placeholder" WidthRequest="150" Padding="0" Margin="0"/>
                            <Label Text="Help Center" Padding="10,5,0,35"/>
                        </StackLayout>
                    </yummy:PancakeView>

                    <yummy:PancakeView BackgroundColor="White" CornerRadius="0,0,8,8" Margin="0,0,30,0">
                        <StackLayout Orientation="Vertical">
                            <ImageButton Source="under_development_placeholder" WidthRequest="150" Padding="0" Margin="0"/>
                            <Label Text="Option 6" Padding="10,5,0,35"/>
                        </StackLayout>
                    </yummy:PancakeView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>