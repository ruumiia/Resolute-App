<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Resolute_App.MathGameStart"
             BackgroundImageSource="math_wallpaper.jpg"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="0,70,0,0">
            <Button Grid.Row ="0" Grid.Column="0" Text="Start a Solo Game" />
            <Button Grid.Row ="0" Grid.Column="1" Text="Multiplay" />
            <Button Grid.Row ="1" Grid.Column="0" Text="Leaderboards" />
            <Button Grid.Row ="1" Grid.Column="1" Text="How it works?"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>